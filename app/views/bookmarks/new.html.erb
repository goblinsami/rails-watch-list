<div class="container p-0 bg-white my-5">
  <div class="row">
  <div class="col-md-8">
  <div class="container p-5 position-relative">
    <h3>New Movie</h3>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
    <%= link_to '+ Back',  list_path(@list) , class:"btn btn-outline-secondary bookmark-button" %>
  </div>
  <div class="col-md-4">
    <% @url = "https://picsum.photos/230/300?random=#{@seed}" %>
    <% @seed= rand(0..699) %>
    <img class="list-image" src=<%="#{@url}"%> alt="">
  </div>
  </div>
</div>
