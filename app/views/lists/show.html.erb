<div class="container my-5 bg-white px-0">
  <div class="banner container-fluid d-flex justify-content-center align-items-center">
    <div class="text-center">
        <h2 class="text-white"> <%= @list.name %></h2>
        <%= link_to '+ Create NEW BOOKMARK',  new_list_bookmark_path(@list) , class:"btn btn-outline-light" %>
    </div>
  </div>

  <div class="row m-0 g-2 mx-0 justify-content-around my-5">
  <% @list.bookmarks.each do |bookmark| %>
 <div class="card mx-3 my-3 p-0 bg-white" style="width: 40%">
       <div class="image-top d-flex justify-content-center mx-0">
      <% @url = "https://picsum.photos/230/100?random=#{@seed}" %>
<% @seed= rand(0..699) %>
      <img class="list-image" src=<%="#{@url}"%> alt="">
      </div>

<div class="d-flex justify-content-between align-items-center px-3">

  <h4 class="pt-3"> <%= bookmark.movie.title %> </h4>

<%= link_to bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure?" } do  %>
<i class="far fa-trash-alt"></i>
<% end %>
</div>



     <hr class="m-0">
     <p class="px-3 pt-2"> <%= bookmark.comment %></p>
       <%# end of card %>
    </div>
  <% end %>
  <%# end of row %>
</div>

<%= link_to '+ Back',  lists_path(@list) , class:"btn btn-outline-secondary" %>
<%# end of container  %>
</div>
</div>
